{
  "name": "cucumber-mink",
  "version": "0.0.0-semantic-release",
  "description": "Cucumber-js Mink - Step definitions library",
  "keywords": [
    "testing",
    "bdd",
    "cucumber",
    "cucumber-js",
    "gherkin",
    "tests",
    "webdriver",
    "phantomjs",
    "selenium"
  ],
  "license": "MIT",
  "author": {
    "name": "Arnaud Dezandee",
    "email": "dezandee.arnaud@gmail.com"
  },
  "homepage": "https://github.com/Adezandee/cucumber-mink",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adezandee/cucumber-mink.git"
  },
  "bugs": {
    "url": "http://github.com/Adezandee/cucumber-mink/issues"
  },
  "engines": {
    "node": ">= 6"
  },
  "main": "src/mink.js",
  "bin": {
    "cucumber-mink": "src/cli.js"
  },
  "scripts": {
    "start": "node test/site/server.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "coverage": "node ./node_modules/.bin/isparta cover _mocha -- --root src/ test/mocha/",
    "coverage:upload": "cat ./coverage/lcov.info | coveralls",
    "pretest": "eslint src/ test/",
    "test": "mocha test/mocha/",
    "e2e": "node ./src/cli.js test/features -- -f progress",
    "protractor": "protractor protractor.cucumber.js"
  },
  "dependencies": {
    "bluebird": "3.5.0",
    "chai": "4.1.2",
    "cucumber": "3.0.1",
    "debug": "3.0.1",
    "immutable": "3.8.1",
    "lodash.defaultsdeep": "4.6.0",
    "meow": "3.7.0",
    "util-arity": "1.1.0",
    "webdriverio": "4.8.0"
  },
  "devDependencies": {
    "body-parser": "~1.18.0",
    "coveralls": "~2.13.1",
    "cz-conventional-changelog": "~2.0.0",
    "eslint": "~4.6.1",
    "eslint-config-airbnb-base": "~12.0.0",
    "eslint-plugin-import": "~2.7.0",
    "express": "~4.15.4",
    "isparta": "~4.0.0",
    "jest-mock": "~21.0.2",
    "lodash.range": "~3.2.0",
    "mocha": "~3.5.2",
    "morgan": "~1.8.2",
    "protractor": "~5.1.2",
    "protractor-cucumber-framework": "~4.0.4",
    "semantic-release": "~7.0.2",
    "swig": "~1.4.2"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "max-len": 0,
      "no-underscore-dangle": 0,
      "no-console": 0,
      "new-cap": 0,
      "global-require": 0,
      "func-names": 0,
      "import/no-extraneous-dependencies": 0,
      "import/extensions": 0,
      "class-methods-use-this": 0,
      "function-paren-newline": 0
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
