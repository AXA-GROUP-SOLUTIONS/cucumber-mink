{
  "name": "cucumber-mink",
  "version": "0.0.0-semantic-release",
  "description": "Cucumber-js Mink - Step definitions library",
  "keywords": [
    "testing",
    "bdd",
    "cucumber",
    "cucumber-js",
    "gherkin",
    "tests",
    "webdriver",
    "phantomjs",
    "selenium"
  ],
  "license": "MIT",
  "author": {
    "name": "Arnaud Dezandee",
    "email": "dezandee.arnaud@gmail.com"
  },
  "homepage": "https://github.com/Adezandee/cucumber-mink",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adezandee/cucumber-mink.git"
  },
  "bugs": {
    "url": "http://github.com/Adezandee/cucumber-mink/issues"
  },
  "engines": {
    "node": ">= 4"
  },
  "main": "dist/mink.js",
  "bin": {
    "cucumber-mink": "dist/cli.js"
  },
  "scripts": {
    "start": "babel-node test/site/server.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "coverage": "babel-node ./node_modules/.bin/isparta cover _mocha -- --root src/ test/mocha/",
    "coverage:upload": "cat ./coverage/lcov.info | coveralls",
    "prepublish": "npm run compile",
    "precompile": "rm -rf dist/",
    "compile": "babel src/ -d dist/",
    "pretest": "eslint .",
    "test": "mocha --compilers js:babel-register test/mocha/",
    "e2e": "babel-node ./src/cli.js test/features -- -f progress"
  },
  "dependencies": {
    "bluebird": "^3.2.2",
    "chai": "^3.5.0",
    "cucumber": "^0.9.4",
    "debug": "^2.2.0",
    "immutable": "^3.7.6",
    "lodash.defaultsdeep": "^4.1.0",
    "meow": "^3.7.0",
    "util-arity": "^1.0.2",
    "webdriverio": "^4.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-eslint": "^5.0.0-beta9",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.5.2",
    "body-parser": "^1.14.2",
    "coveralls": "^2.11.6",
    "cz-conventional-changelog": "^1.1.5",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^6.0.1",
    "express": "^4.13.3",
    "isparta": "^4.0.0",
    "jest-cli": "^0.8.2",
    "mocha": "^2.3.4",
    "morgan": "^1.6.1",
    "semantic-release": "^4.3.5",
    "swig": "^1.4.2"
  },
  "eslintConfig": {
    "extends": "airbnb/base",
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "max-len": 0,
      "no-console": 0,
      "func-names": 0,
      "new-cap": 0
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports",
      "transform-object-rest-spread"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
